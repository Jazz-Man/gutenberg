{
	"extends": "@gutenberg/config/tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "src",
		"outDir": "build",
		"declarationDir": "build-types",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/**/*.js",
		"src/**/**/*.json"
	],
	"references": [
		{
			"path": "../api-fetch"
		},
		{
			"path": "../block-editor"
		},
		{
			"path": "../blocks"
		},
		{
			"path": "../components"
		},
		{
			"path": "../compose"
		},
		{
			"path": "../core-data"
		},
		{
			"path": "../data"
		},
		{
			"path": "../element"
		},
		{
			"path": "../i18n"
		},
		{
			"path": "../icons"
		},
		{
			"path": "../notices"
		}
	],
	"exclude": [
		"src/test"
	]
}
