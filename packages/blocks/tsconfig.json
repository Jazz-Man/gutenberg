{
	"extends": "@gutenberg/config/tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "src",
		"outDir": "build",
		"declarationDir": "build-types",
		"resolveJsonModule": true,
		"checkJs": false
	},
	"references": [
		{
			"path": "../data"
		},
		{
			"path": "../i18n"
		},
		{
			"path": "../deprecated"
		},
		{
			"path": "../hooks"
		},
		{
			"path": "../compose"
		},
		{
			"path": "../private-apis"
		}
	],
	"include": [
		"src/**/*",
		"src/**/*.json"
	],
	"exclude": [
		"src/store/test",
		"src/api/test",
		"src/api/**/test"
	]
}
